{
  "openapi": "3.0.0",
  "info": {
    "title": "Content Agent API",
    "description": "Content generation agent for presentations",
    "version": "1.0.0"
  },
  "paths": {
    "/generate-content": {
      "post": {
        "operationId": "generateSlideContent",
        "summary": "Generate content for presentation slides",
        "description": "Create detailed content for presentation slides",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "outline": {
                    "type": "object",
                    "description": "Presentation outline with slide structure"
                  },
                  "slideNumbers": {
                    "type": "array",
                    "items": {
                      "type": "integer"
                    },
                    "description": "Specific slides to generate (null for all)"
                  },
                  "contentStyle": {
                    "type": "string",
                    "description": "Writing style (formal, conversational, academic, persuasive)",
                    "default": "formal"
                  },
                  "detailLevel": {
                    "type": "string",
                    "description": "Level of detail (executive_summary, balanced, detailed)",
                    "default": "balanced"
                  },
                  "includeData": {
                    "type": "boolean",
                    "description": "Include data points and statistics",
                    "default": false
                  },
                  "language": {
                    "type": "string",
                    "description": "Output language (EN, JA, ZH, ES, FR, DE, PT, KO)",
                    "default": "EN"
                  }
                },
                "required": ["outline"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Content generated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "slides": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "slideNumber": {
                            "type": "integer"
                          },
                          "title": {
                            "type": "string"
                          },
                          "content": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/generate-speaker-notes": {
      "post": {
        "operationId": "generateSpeakerNotes",
        "summary": "Create detailed speaker notes for slides",
        "description": "Create detailed speaker notes for each slide",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "slides": {
                    "type": "array",
                    "items": {
                      "type": "object"
                    },
                    "description": "Array of slides with content"
                  },
                  "totalDuration": {
                    "type": "integer",
                    "description": "Total presentation time in minutes"
                  },
                  "style": {
                    "type": "string",
                    "description": "Speaking style (conversational, formal, educational, motivational, technical)",
                    "default": "conversational"
                  },
                  "expertiseLevel": {
                    "type": "string",
                    "description": "Speaker's expertise (beginner, intermediate, expert)",
                    "default": "intermediate"
                  },
                  "includeTransitions": {
                    "type": "boolean",
                    "description": "Include slide transition phrases",
                    "default": true
                  },
                  "includeExamples": {
                    "type": "boolean",
                    "description": "Include examples and anecdotes",
                    "default": true
                  },
                  "includeQuestions": {
                    "type": "boolean",
                    "description": "Include anticipated Q&A",
                    "default": false
                  }
                },
                "required": ["slides", "totalDuration"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Speaker notes generated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "speakerNotes": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "slideNumber": {
                            "type": "integer"
                          },
                          "notes": {
                            "type": "string"
                          },
                          "timing": {
                            "type": "integer"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}