{
  "openapi": "3.0.0",
  "info": {
    "title": "Visual Agent API",
    "description": "Visual generation agent for presentations",
    "version": "1.0.0"
  },
  "paths": {
    "/generate-image": {
      "post": {
        "operationId": "generateImage",
        "summary": "Generate an AI image based on prompt",
        "description": "Generate an AI image based on prompt",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "prompt": {
                    "type": "string",
                    "description": "Detailed description of the image to generate"
                  },
                  "style": {
                    "type": "string",
                    "description": "Visual style (photorealistic, illustration, diagram, infographic, abstract)",
                    "default": "photorealistic"
                  },
                  "aspectRatio": {
                    "type": "string",
                    "description": "Image aspect ratio (16:9, 4:3, 1:1, 9:16)",
                    "default": "16:9"
                  },
                  "colorScheme": {
                    "type": "string",
                    "description": "Color palette preference",
                    "default": "natural"
                  },
                  "model": {
                    "type": "string",
                    "description": "AI model to use (stability-diffusion-xl, dall-e-3)",
                    "default": "stability-diffusion-xl"
                  }
                },
                "required": ["prompt"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Image generated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "imageUrl": {
                      "type": "string",
                      "description": "URL of the generated image"
                    },
                    "imageId": {
                      "type": "string",
                      "description": "Unique identifier of the image"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/find-image": {
      "get": {
        "operationId": "searchImages",
        "summary": "Search for existing images",
        "description": "Search for existing images from various sources",
        "parameters": [
          {
            "name": "keywords",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Search keywords (comma-separated)"
          },
          {
            "name": "category",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "Image category (business, technology, nature, abstract)"
          },
          {
            "name": "licenseType",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "License requirement (creative_commons, royalty_free, commercial)"
          },
          {
            "name": "minResolution",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "Minimum resolution requirement"
          }
        ],
        "responses": {
          "200": {
            "description": "Images found successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "images": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string"
                          },
                          "url": {
                            "type": "string"
                          },
                          "title": {
                            "type": "string"
                          },
                          "source": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/generate-chart": {
      "post": {
        "operationId": "generateChart",
        "summary": "Create data visualization charts",
        "description": "Create data visualization charts",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "chartType": {
                    "type": "string",
                    "description": "Type of chart (bar, line, pie, scatter, heatmap)"
                  },
                  "data": {
                    "type": "object",
                    "description": "Data to visualize"
                  },
                  "title": {
                    "type": "string",
                    "description": "Chart title"
                  },
                  "colorPalette": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "description": "Colors to use in the chart"
                  }
                },
                "required": ["chartType", "data"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Chart generated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "chartUrl": {
                      "type": "string",
                      "description": "URL of the generated chart"
                    },
                    "chartId": {
                      "type": "string",
                      "description": "Unique identifier of the chart"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}