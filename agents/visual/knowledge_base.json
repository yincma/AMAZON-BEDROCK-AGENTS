{
  "knowledgeBaseName": "PPTVisualKnowledgeBase",
  "description": "Knowledge base for Visual Agent containing design principles, visual communication, and image generation guidelines",
  "roleArn": "${KNOWLEDGE_BASE_ROLE_ARN}",
  "knowledgeBaseConfiguration": {
    "type": "VECTOR",
    "vectorKnowledgeBaseConfiguration": {
      "embeddingModelArn": "arn:aws:bedrock:${AWS_REGION}::foundation-model/amazon.titan-embed-text-v2:0",
      "embeddingModelConfiguration": {
        "embeddingDataType": "FLOAT32",
        "dimensions": 1024
      }
    }
  },
  "storageConfiguration": {
    "type": "OPENSEARCH_SERVERLESS",
    "opensearchServerlessConfiguration": {
      "collectionArn": "${OPENSEARCH_COLLECTION_ARN}",
      "vectorIndexName": "ppt-visual-index",
      "fieldMapping": {
        "vectorField": "embedding",
        "textField": "text",
        "metadataField": "metadata"
      }
    }
  },
  "dataSources": [
    {
      "dataSourceName": "DesignPrinciples",
      "description": "Fundamental design principles for visual communication",
      "dataSourceConfiguration": {
        "type": "S3",
        "s3DataSourceConfiguration": {
          "bucketArn": "${KNOWLEDGE_BASE_BUCKET_ARN}",
          "inclusionPrefixes": ["visual-design/"]
        }
      },
      "dataSourceContent": [
        {
          "fileName": "design_principles.json",
          "content": {
            "principles": {
              "balance": {
                "description": "Visual equilibrium in composition",
                "types": ["symmetrical", "asymmetrical", "radial"],
                "application": "Distribute visual weight evenly across the slide"
              },
              "contrast": {
                "description": "Difference between elements to create visual interest",
                "types": ["color", "size", "shape", "texture"],
                "application": "Use contrast to highlight important information"
              },
              "hierarchy": {
                "description": "Organization of elements by importance",
                "techniques": ["size variation", "color intensity", "positioning", "white space"],
                "application": "Guide viewer's eye through content"
              },
              "alignment": {
                "description": "Positioning elements in relation to each other",
                "types": ["left", "center", "right", "justified"],
                "application": "Create clean, organized layouts"
              },
              "repetition": {
                "description": "Consistent use of design elements",
                "elements": ["colors", "fonts", "shapes", "spacing"],
                "application": "Build visual consistency and unity"
              },
              "proximity": {
                "description": "Grouping related elements together",
                "application": "Show relationships between content elements"
              },
              "white_space": {
                "description": "Empty space around elements",
                "benefits": ["improved readability", "focus", "elegance"],
                "application": "Use 30-40% white space for optimal clarity"
              }
            }
          }
        },
        {
          "fileName": "color_theory.json",
          "content": {
            "color_schemes": {
              "monochromatic": "Single color with variations in shade and tint",
              "analogous": "Colors next to each other on the color wheel",
              "complementary": "Opposite colors on the color wheel",
              "triadic": "Three evenly spaced colors on the wheel",
              "split_complementary": "Base color plus two adjacent to complement"
            },
            "color_psychology": {
              "blue": "Trust, stability, professionalism",
              "red": "Energy, urgency, passion",
              "green": "Growth, harmony, sustainability",
              "orange": "Creativity, enthusiasm, warmth",
              "purple": "Luxury, wisdom, innovation",
              "black": "Sophistication, formality, power",
              "white": "Simplicity, cleanliness, space"
            },
            "accessibility": {
              "contrast_ratios": {
                "normal_text": "4.5:1 minimum",
                "large_text": "3:1 minimum",
                "graphics": "3:1 minimum"
              },
              "color_blindness": [
                "Avoid red-green combinations",
                "Use patterns or labels in addition to color",
                "Test with color blindness simulators"
              ]
            }
          }
        }
      ]
    },
    {
      "dataSourceName": "VisualTypes",
      "description": "Different types of visuals and their appropriate uses",
      "dataSourceConfiguration": {
        "type": "S3",
        "s3DataSourceConfiguration": {
          "bucketArn": "${KNOWLEDGE_BASE_BUCKET_ARN}",
          "inclusionPrefixes": ["visual-types/"]
        }
      },
      "dataSourceContent": [
        {
          "fileName": "image_types.json",
          "content": {
            "photography": {
              "use_cases": ["Real-world examples", "Emotional connection", "Product showcases"],
              "best_practices": [
                "High resolution (min 300dpi for print)",
                "Relevant to content",
                "Professional quality",
                "Appropriate licensing"
              ]
            },
            "illustrations": {
              "use_cases": ["Concept explanation", "Process visualization", "Storytelling"],
              "styles": ["flat design", "isometric", "hand-drawn", "vector art"],
              "advantages": ["Customizable", "Scalable", "Consistent style"]
            },
            "infographics": {
              "use_cases": ["Data presentation", "Statistics", "Comparisons", "Timelines"],
              "components": ["Icons", "Charts", "Text", "Color coding"],
              "principles": ["Data accuracy", "Visual clarity", "Logical flow"]
            },
            "diagrams": {
              "types": {
                "flowchart": "Process and decision flows",
                "organizational": "Hierarchies and structures",
                "venn": "Relationships and overlaps",
                "network": "Connections and systems",
                "gantt": "Project timelines"
              }
            },
            "icons": {
              "use_cases": ["Navigation", "Categories", "Quick recognition"],
              "styles": ["outline", "filled", "duotone", "3D"],
              "guidelines": ["Consistent style", "Clear meaning", "Appropriate size"]
            }
          }
        },
        {
          "fileName": "chart_selection.json",
          "content": {
            "comparison": {
              "bar_chart": "Compare quantities across categories",
              "column_chart": "Show changes over time",
              "bullet_chart": "Compare performance to target"
            },
            "composition": {
              "pie_chart": "Show parts of a whole (max 5-7 segments)",
              "donut_chart": "Similar to pie with central focus area",
              "stacked_bar": "Show composition changes over time",
              "treemap": "Hierarchical part-to-whole relationships"
            },
            "distribution": {
              "histogram": "Show frequency distribution",
              "box_plot": "Display statistical distribution",
              "scatter_plot": "Show correlation between variables",
              "bubble_chart": "Three-variable relationships"
            },
            "trend": {
              "line_chart": "Show trends over time",
              "area_chart": "Emphasize magnitude of change",
              "sparkline": "Simple trend indicator"
            },
            "relationship": {
              "scatter_plot": "Correlation between two variables",
              "bubble_chart": "Multi-variable relationships",
              "network_diagram": "Connections and relationships"
            }
          }
        }
      ]
    },
    {
      "dataSourceName": "ImageGeneration",
      "description": "Guidelines for AI image generation",
      "dataSourceConfiguration": {
        "type": "S3",
        "s3DataSourceConfiguration": {
          "bucketArn": "${KNOWLEDGE_BASE_BUCKET_ARN}",
          "inclusionPrefixes": ["image-generation/"]
        }
      },
      "dataSourceContent": [
        {
          "fileName": "prompt_engineering.json",
          "content": {
            "prompt_structure": {
              "subject": "Main focus of the image",
              "style": "Artistic style or medium",
              "composition": "Layout and framing",
              "lighting": "Lighting conditions and mood",
              "color": "Color palette and scheme",
              "quality": "Technical specifications"
            },
            "style_descriptors": {
              "photorealistic": ["8K resolution", "hyperrealistic", "professional photography", "studio lighting"],
              "illustration": ["vector art", "flat design", "minimalist", "geometric", "hand-drawn"],
              "corporate": ["clean", "professional", "modern", "business", "minimal"],
              "creative": ["artistic", "abstract", "vibrant", "dynamic", "innovative"],
              "technical": ["blueprint", "schematic", "technical drawing", "CAD", "wireframe"]
            },
            "negative_prompts": [
              "low quality",
              "blurry",
              "distorted",
              "watermark",
              "text overlay",
              "inappropriate content"
            ]
          }
        },
        {
          "fileName": "image_optimization.json",
          "content": {
            "resolution_guidelines": {
              "full_screen": "1920x1080 minimum",
              "half_slide": "960x540 minimum",
              "thumbnail": "320x180 minimum",
              "icon": "128x128 minimum"
            },
            "file_formats": {
              "png": {
                "use_for": ["Graphics with transparency", "Diagrams", "Screenshots"],
                "advantages": ["Lossless compression", "Transparency support"],
                "disadvantages": ["Larger file size"]
              },
              "jpeg": {
                "use_for": ["Photographs", "Complex images"],
                "advantages": ["Smaller file size", "Wide compatibility"],
                "disadvantages": ["Lossy compression", "No transparency"]
              },
              "svg": {
                "use_for": ["Icons", "Logos", "Simple graphics"],
                "advantages": ["Infinitely scalable", "Small file size"],
                "disadvantages": ["Not suitable for photos"]
              }
            },
            "compression_settings": {
              "jpeg_quality": "80-90 for presentation",
              "png_compression": "Level 9 for maximum compression",
              "target_size": "< 500KB per image for smooth loading"
            }
          }
        }
      ]
    },
    {
      "dataSourceName": "LayoutPatterns",
      "description": "Common layout patterns for slides",
      "dataSourceConfiguration": {
        "type": "S3",
        "s3DataSourceConfiguration": {
          "bucketArn": "${KNOWLEDGE_BASE_BUCKET_ARN}",
          "inclusionPrefixes": ["layouts/"]
        }
      },
      "dataSourceContent": [
        {
          "category": "Title Slides",
          "patterns": [
            {
              "name": "Center Aligned",
              "description": "Title and subtitle centered with background image",
              "visual_ratio": "100% background"
            },
            {
              "name": "Split Screen",
              "description": "Text on one side, image on the other",
              "visual_ratio": "50% text, 50% visual"
            }
          ]
        },
        {
          "category": "Content Slides",
          "patterns": [
            {
              "name": "Text with Supporting Image",
              "description": "Bullet points with related image",
              "visual_ratio": "60% text, 40% visual"
            },
            {
              "name": "Image Focus",
              "description": "Large image with minimal text overlay",
              "visual_ratio": "20% text, 80% visual"
            },
            {
              "name": "Three Column",
              "description": "Three equal columns for comparison",
              "visual_ratio": "Variable based on content"
            }
          ]
        },
        {
          "category": "Data Slides",
          "patterns": [
            {
              "name": "Single Chart Focus",
              "description": "One large chart with title and key takeaway",
              "visual_ratio": "80% chart, 20% text"
            },
            {
              "name": "Dashboard Layout",
              "description": "Multiple small charts arranged in grid",
              "visual_ratio": "70% charts, 30% text"
            }
          ]
        }
      ]
    },
    {
      "dataSourceName": "AccessibilityGuidelines",
      "description": "Visual accessibility standards",
      "dataSourceConfiguration": {
        "type": "S3",
        "s3DataSourceConfiguration": {
          "bucketArn": "${KNOWLEDGE_BASE_BUCKET_ARN}",
          "inclusionPrefixes": ["accessibility/"]
        }
      },
      "dataSourceContent": [
        {
          "guidelines": {
            "color_contrast": {
              "WCAG_AA": "4.5:1 for normal text, 3:1 for large text",
              "WCAG_AAA": "7:1 for normal text, 4.5:1 for large text",
              "testing_tools": ["WebAIM Contrast Checker", "Colour Contrast Analyser"]
            },
            "alternative_text": {
              "informative_images": "Describe the content and function",
              "decorative_images": "Mark as decorative or use empty alt text",
              "complex_images": "Provide detailed description separately"
            },
            "motion_sensitivity": {
              "autoplay": "Avoid or provide pause controls",
              "animations": "Keep subtle and provide reduced motion option",
              "transitions": "Use simple fades instead of complex movements"
            }
          }
        }
      ]
    }
  ],
  "retrievalConfiguration": {
    "vectorSearchConfiguration": {
      "numberOfResults": 5,
      "overrideSearchType": "HYBRID",
      "filter": null
    }
  },
  "tags": {
    "Environment": "Production",
    "Project": "AI-PPT-Assistant",
    "Component": "KnowledgeBase",
    "Agent": "Visual"
  }
}