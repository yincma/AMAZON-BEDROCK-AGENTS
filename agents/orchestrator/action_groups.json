{
  "openapi": "3.0.0",
  "info": {
    "title": "Orchestrator Agent API",
    "description": "Master orchestrator agent for AI PPT Assistant",
    "version": "1.0.0"
  },
  "paths": {
    "/create-presentation": {
      "post": {
        "operationId": "createPresentation",
        "summary": "Initialize a new presentation request and generate outline",
        "description": "Initialize a new presentation request and generate outline",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "topic": {
                    "type": "string",
                    "description": "Main topic of the presentation"
                  },
                  "audience": {
                    "type": "string",
                    "description": "Target audience description"
                  },
                  "duration": {
                    "type": "integer",
                    "description": "Duration in minutes (default: 20)",
                    "default": 20
                  },
                  "language": {
                    "type": "string",
                    "description": "Language code (EN, JA, ZH, ES, FR, DE, PT, KO)",
                    "default": "EN"
                  },
                  "style": {
                    "type": "string",
                    "description": "Presentation style (professional, creative, minimalist, technical)",
                    "default": "professional"
                  }
                },
                "required": ["topic"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Presentation created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "presentationId": {
                      "type": "string",
                      "description": "Unique identifier of the presentation"
                    },
                    "status": {
                      "type": "string",
                      "description": "Creation status"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/presentation-status": {
      "get": {
        "operationId": "getPresentationStatus",
        "summary": "Check the current status of a presentation creation",
        "description": "Check the current status of a presentation creation",
        "parameters": [
          {
            "name": "presentationId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Unique identifier of the presentation"
          }
        ],
        "responses": {
          "200": {
            "description": "Status retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "description": "Current status of the presentation"
                    },
                    "progress": {
                      "type": "number",
                      "description": "Completion percentage"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/list-presentations": {
      "get": {
        "operationId": "listPresentations",
        "summary": "List all presentations for current session",
        "description": "List all presentations for current session",
        "parameters": [
          {
            "name": "sessionId",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "Session identifier"
          },
          {
            "name": "status",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            },
            "description": "Filter by status"
          }
        ],
        "responses": {
          "200": {
            "description": "Presentations listed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "presentations": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string"
                          },
                          "title": {
                            "type": "string"
                          },
                          "status": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}