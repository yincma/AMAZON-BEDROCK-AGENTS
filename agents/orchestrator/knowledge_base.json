{
  "knowledgeBaseName": "PPTOrchestratorKnowledgeBase",
  "description": "Knowledge base for PPT Orchestrator Agent containing presentation best practices, templates, and domain knowledge",
  "roleArn": "${KNOWLEDGE_BASE_ROLE_ARN}",
  "knowledgeBaseConfiguration": {
    "type": "VECTOR",
    "vectorKnowledgeBaseConfiguration": {
      "embeddingModelArn": "arn:aws:bedrock:${AWS_REGION}::foundation-model/amazon.titan-embed-text-v2:0",
      "embeddingModelConfiguration": {
        "embeddingDataType": "FLOAT32",
        "dimensions": 1024
      }
    }
  },
  "storageConfiguration": {
    "type": "OPENSEARCH_SERVERLESS",
    "opensearchServerlessConfiguration": {
      "collectionArn": "${OPENSEARCH_COLLECTION_ARN}",
      "vectorIndexName": "ppt-orchestrator-index",
      "fieldMapping": {
        "vectorField": "embedding",
        "textField": "text",
        "metadataField": "metadata"
      }
    }
  },
  "dataSources": [
    {
      "dataSourceName": "PresentationTemplates",
      "description": "Collection of presentation templates and styles",
      "dataSourceConfiguration": {
        "type": "S3",
        "s3DataSourceConfiguration": {
          "bucketArn": "${KNOWLEDGE_BASE_BUCKET_ARN}",
          "bucketOwnerAccountId": "${AWS_ACCOUNT_ID}",
          "inclusionPrefixes": ["templates/"],
          "exclusionPatterns": ["*.tmp", "*.backup"]
        }
      },
      "dataSourceContent": [
        {
          "fileName": "professional_template.json",
          "content": {
            "title": "Professional Presentation Template",
            "description": "Clean, modern design suitable for business presentations",
            "structure": {
              "titleSlide": {
                "elements": ["title", "subtitle", "author", "date", "company_logo"],
                "styling": "minimalist with brand colors"
              },
              "contentSlides": {
                "layouts": ["title_content", "two_column", "image_content", "chart_content"],
                "bulletPoints": "maximum 5 per slide",
                "fontSizes": {
                  "title": 44,
                  "content": 24,
                  "captions": 16
                }
              }
            },
            "colorScheme": {
              "primary": "#003366",
              "secondary": "#0066CC",
              "accent": "#FF6600",
              "background": "#FFFFFF",
              "text": "#333333"
            },
            "bestPractices": [
              "Use consistent fonts throughout",
              "Maintain visual hierarchy",
              "Include breathing room with white space",
              "Limit text to key points",
              "Use high-quality images"
            ]
          }
        },
        {
          "fileName": "creative_template.json",
          "content": {
            "title": "Creative Presentation Template",
            "description": "Bold, vibrant design for creative and marketing presentations",
            "structure": {
              "titleSlide": {
                "elements": ["large_title", "creative_graphics", "minimal_text"],
                "styling": "asymmetric layout with bold colors"
              },
              "contentSlides": {
                "layouts": ["full_bleed_image", "text_overlay", "grid_layout", "timeline"],
                "emphasis": "visual storytelling over text"
              }
            },
            "colorScheme": {
              "primary": "#FF1744",
              "secondary": "#00E676",
              "accent": "#FFEA00",
              "background": "#1E1E1E",
              "text": "#FFFFFF"
            }
          }
        }
      ]
    },
    {
      "dataSourceName": "PresentationBestPractices",
      "description": "Guidelines and best practices for effective presentations",
      "dataSourceConfiguration": {
        "type": "S3",
        "s3DataSourceConfiguration": {
          "bucketArn": "${KNOWLEDGE_BASE_BUCKET_ARN}",
          "inclusionPrefixes": ["best-practices/"]
        }
      },
      "dataSourceContent": [
        {
          "fileName": "presentation_structure.md",
          "content": "# Effective Presentation Structure\n\n## Opening (10-15% of time)\n- Hook: Start with a question, statistic, or story\n- Preview: Tell them what you'll tell them\n- Establish credibility and relevance\n\n## Body (70-75% of time)\n- Main Point 1: Support with evidence, examples\n- Main Point 2: Include transitions between points\n- Main Point 3: Use visual aids effectively\n\n## Conclusion (10-15% of time)\n- Summarize key takeaways\n- Call to action\n- Q&A preparation\n\n## Slide Design Rules\n- 10-20-30 Rule: 10 slides, 20 minutes, 30pt minimum font\n- 6x6 Rule: Maximum 6 bullet points with 6 words each\n- One idea per slide\n- Visual hierarchy: Title → Main point → Supporting details"
        },
        {
          "fileName": "audience_adaptation.md",
          "content": "# Adapting Presentations to Different Audiences\n\n## Executive Audience\n- Lead with conclusions and recommendations\n- Focus on ROI and business impact\n- Keep it concise (15-20 minutes max)\n- Prepare for interruptions and questions\n\n## Technical Audience\n- Include detailed methodology\n- Show data and evidence\n- Prepare deep-dive backup slides\n- Allow time for technical Q&A\n\n## General Audience\n- Avoid jargon and acronyms\n- Use relatable examples and analogies\n- Include more visuals, less text\n- Tell stories to illustrate points\n\n## International Audience\n- Consider cultural sensitivities\n- Use universal examples\n- Speak clearly and avoid idioms\n- Provide translations if needed"
        }
      ]
    },
    {
      "dataSourceName": "DomainKnowledge",
      "description": "Specific domain knowledge for various presentation topics",
      "dataSourceConfiguration": {
        "type": "S3",
        "s3DataSourceConfiguration": {
          "bucketArn": "${KNOWLEDGE_BASE_BUCKET_ARN}",
          "inclusionPrefixes": ["domains/"]
        }
      },
      "dataSourceContent": [
        {
          "category": "Business",
          "topics": [
            "Strategic Planning",
            "Financial Reporting",
            "Marketing Strategy",
            "Product Launch",
            "Competitive Analysis",
            "Business Model Canvas"
          ],
          "frameworks": [
            "SWOT Analysis",
            "Porter's Five Forces",
            "BCG Matrix",
            "Value Chain Analysis"
          ]
        },
        {
          "category": "Technology",
          "topics": [
            "Software Architecture",
            "Cloud Migration",
            "AI/ML Implementation",
            "Cybersecurity",
            "DevOps Practices",
            "Digital Transformation"
          ],
          "frameworks": [
            "TOGAF",
            "Well-Architected Framework",
            "Agile Methodology",
            "Zero Trust Security"
          ]
        },
        {
          "category": "Education",
          "topics": [
            "Curriculum Design",
            "Learning Objectives",
            "Assessment Methods",
            "Educational Technology",
            "Student Engagement"
          ],
          "frameworks": [
            "Bloom's Taxonomy",
            "ADDIE Model",
            "Constructive Alignment",
            "Universal Design for Learning"
          ]
        }
      ]
    },
    {
      "dataSourceName": "VisualDesignGuidelines",
      "description": "Guidelines for visual design and data visualization",
      "dataSourceConfiguration": {
        "type": "S3",
        "s3DataSourceConfiguration": {
          "bucketArn": "${KNOWLEDGE_BASE_BUCKET_ARN}",
          "inclusionPrefixes": ["design-guidelines/"]
        }
      },
      "dataSourceContent": [
        {
          "fileName": "data_visualization.json",
          "content": {
            "chartSelection": {
              "comparison": ["bar", "column"],
              "trend": ["line", "area"],
              "proportion": ["pie", "donut", "treemap"],
              "relationship": ["scatter", "bubble"],
              "distribution": ["histogram", "box plot"]
            },
            "colorGuidelines": [
              "Use maximum 7 colors in a single chart",
              "Ensure sufficient contrast for accessibility",
              "Use color consistently across slides",
              "Consider colorblind-friendly palettes"
            ],
            "dataLabeling": [
              "Always include axis labels and units",
              "Use data labels sparingly to avoid clutter",
              "Include source attribution",
              "Highlight key data points"
            ]
          }
        }
      ]
    }
  ],
  "retrievalConfiguration": {
    "vectorSearchConfiguration": {
      "numberOfResults": 5,
      "overrideSearchType": "HYBRID",
      "filter": {
        "documentAttributeFilter": {
          "andAll": [
            {
              "key": "relevance",
              "value": {
                "stringValue": "high"
              }
            }
          ]
        }
      }
    }
  },
  "tags": {
    "Environment": "Production",
    "Project": "AI-PPT-Assistant",
    "Component": "KnowledgeBase",
    "Agent": "Orchestrator"
  }
}