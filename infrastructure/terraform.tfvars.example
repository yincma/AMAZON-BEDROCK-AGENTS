# AWS Configuration
aws_region  = "us-east-1"
environment = "dev"

# Project Configuration
project_name = "ai-ppt-assistant"

# DynamoDB Configuration
dynamodb_table_name = "ai-ppt-presentations"

# Image Processing Configuration
enable_vpc        = false
enable_lambda_url = true

# VPC Configuration (仅在enable_vpc=true时需要)
# private_subnet_ids = ["subnet-12345", "subnet-67890"]

# Monitoring Configuration
alert_email = "your-email@example.com"

# Lambda Configuration
lambda_timeout_seconds = 300
lambda_memory_mb      = 1024

# Bedrock Configuration
nova_model_id = "amazon.nova-canvas-v1:0"

# Image Processing Settings
default_image_width  = 1200
default_image_height = 800
max_retry_attempts   = 3

# Performance Settings
enable_caching    = true
enable_monitoring = true
enable_batching   = true
cache_ttl_seconds = 3600

# Security Settings
enable_xray_tracing = true
log_level          = "INFO"