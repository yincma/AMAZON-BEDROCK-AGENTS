[flake8]
# Flake8 configuration for AI PPT Assistant project
max-line-length = 120
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    venv-py313,
    .pytest_cache,
    .terraform,
    infrastructure,
    node_modules,
    build,
    dist

ignore = 
    # E501: Line too long (handled by max-line-length)
    E501,
    # W503: Line break before binary operator
    W503,
    # E203: Whitespace before ':' (conflicts with black formatter)
    E203,
    # E402: Module import not at top of file
    E402

per-file-ignores = 
    __init__.py:F401,F403
    tests/*.py:F401,F811
    # Temporarily ignore complexity in specific files that need refactoring
    lambdas/api/modify_slide.py:C901
    lambdas/api/presentation_download.py:C901
    lambdas/api/presentation_status.py:C901
    lambdas/controllers/find_image.py:C901
    lambdas/controllers/generate_image.py:C901
    lambdas/controllers/generate_speaker_notes.py:C901,E226,E228
    lambdas/utils/checkpoint_manager.py:C901
    lambdas/utils/image_processor.py:C901

# Set complexity limit (increased for existing codebase)
max-complexity = 15